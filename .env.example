# ================================
# DermicaPro - Docker Environment Variables
# ================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env to git!

# ================================
# Database Configuration
# ================================
DB_USER=dermicapro
DB_PASSWORD=dermicapro123
DB_NAME=dermicapro_db
DB_PORT=5432

# Full database URL (used by Prisma)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# ================================
# Backend Configuration
# ================================
NODE_ENV=development
BACKEND_PORT=5000

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# ================================
# Frontend Configuration
# ================================
FRONTEND_PORT=5173

# API URL for frontend
VITE_API_URL=http://localhost:5000

# ================================
# Prisma Studio (Optional)
# ================================
PRISMA_STUDIO_PORT=5555

# ================================
# Production Configuration
# ================================
# Uncomment and configure for production deployment

# NODE_ENV=production
# CORS_ORIGIN=https://yourdomain.com
# VITE_API_URL=https://api.yourdomain.com
# JWT_SECRET=generate-a-strong-random-secret-at-least-32-characters-long

# ================================
# Notes
# ================================
# 1. For local development, the default values should work
# 2. For production, generate strong passwords and secrets
# 3. Use environment-specific .env files (.env.production, .env.staging)
# 4. Never expose database ports (5432) in production
# 5. Use docker secrets or vault for sensitive data in production
